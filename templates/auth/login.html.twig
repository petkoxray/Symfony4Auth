{% extends 'base.html.twig' %}

{% block content %}
    <div class="col-md-6 offset-3 content-section">

        {% if error %}
            <div class="alert alert-danger alert-dismissible fade show"
                 role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        {% endif %}

        <h1>User Sign Up:</h1>
        {{ form_start(login_form) }}

        {{ form_row(login_form._username) }}
        {{ form_row(login_form._password) }}


        <button type="submit" class="btn btn-primary fa fa-thumbs-up">Login</button>
        {{ form_end(login_form) }}
    </div>
{% endblock %}




